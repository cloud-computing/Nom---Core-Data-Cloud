<% content_tag_for :tr, ingredient do %>
  <td><%= ingredient.deleted ? 'X' : '' %>
  <td><%= ingredient.name %></td>
  <td><%= ingredient.quantity %></td>
  <td><%= ingredient.unit_of_measure %></td>
  <td><%= link_to 'Edit', edit_recipe_ingredient_path(@recipe, ingredient) %></td>
  <td><%= link_to 'Delete', recipe_ingredient_path(@recipe, ingredient), :confirm => 'Are you sure?', :method => :delete %></td>
<% end %>