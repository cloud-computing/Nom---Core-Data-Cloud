<h1>Listing ingredients</h1>

<table>
  <tr>
    <th>Recipe</th>
    <th>Name</th>
    <th>Quantity</th>
    <th>Unit of measure</th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%=h ingredient.recipe_id %></td>
    <td><%=h ingredient.name %></td>
    <td><%=h ingredient.quantity %></td>
    <td><%=h ingredient.unit_of_measure %></td>
    <td><%= link_to 'Show', recipe_ingredient_path(ingredient) %></td>
    <td><%= link_to 'Edit', edit_recipe_ingredient_path(ingredient) %></td>
    <td><%= link_to 'Destroy', recipe_ingredient_path(ingredient), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ingredient', new_recipe_ingredient_path %>